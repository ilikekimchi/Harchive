<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="ask">

	<select id="listUser" resultType="Ask">
		SELECT * FROM ask
		WHERE answer IS NOT NULL
	</select>

	<insert id="questionAdd">
		INSERT INTO ask (question)
		VALUES (#{question}) 
	</insert>
	
	<select id="unansweredList" resultType="Ask">
		SELECT askNum, question FROM ask
		WHERE answer = null
	</select>
	
	<select id="answerList" resultType="Ask">
		SELECT * FROM ask
	</select>
	
	<update id="answerAdd">
		UPDATE ask
		SET answer = #{answer}
		WHERE askNum = #{askNum}
	</update>
	
	<delete id="questionDelete">
		DELETE FROM ask
		WHERE askNum = #{askNum}	
	</delete>
	
	<select id="ansInfo" resultType="Ask">
		SELECT * FROM ask
		WHERE askNum = #{askNum}
	</select>
	
</mapper>